<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textoUltimaConsulta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="ðŸ•‘ Ultima consulta"
        app:layout_constraintBottom_toBottomOf="@+id/imagenProducto"
        app:layout_constraintEnd_toEndOf="@+id/textoNombreProducto"
        app:layout_constraintStart_toStartOf="@+id/textoNombreProducto" />

    <TextView
        android:id="@+id/textoMarcaProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Marca del producto"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textoNombreProducto"
        app:layout_constraintStart_toStartOf="@+id/textoNombreProducto"
        app:layout_constraintTop_toBottomOf="@+id/textoNombreProducto" />

    <TextView
        android:id="@+id/textoCalidadProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="ðŸŸ¢ Calidad del producto"
        app:layout_constraintBottom_toTopOf="@+id/textoUltimaConsulta"
        app:layout_constraintEnd_toEndOf="@+id/textoNombreProducto"
        app:layout_constraintStart_toStartOf="@+id/textoNombreProducto" />

    <TextView
        android:id="@+id/textoNombreProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Nombre del producto"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenProducto"
        app:layout_constraintTop_toTopOf="@+id/imagenProducto" />

</androidx.constraintlayout.widget.ConstraintLayout>